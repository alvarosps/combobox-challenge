    "lint:fix": "eslint 'src/**/*.{js,jsx,ts,tsx}' --fix",
    "prettier": "prettier --check 'src/**/*.{js,jsx,ts,tsx,css,scss,json,md}'",
    "prettier:fix": "prettier --write 'src/**/*.{js,jsx,ts,tsx,css,scss,json,md}'",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alvarosps/base-reactjs-typescript.git"
  },
